<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/main_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/grey</item>
    </style>

    <style name="Mainviewtab">
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10.0sp</item>
    </style>

    <style name="Mainviewtabmiddle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>

    </style>

    <style name="SettingLayout">
        <item name="android:background">@color/profile_item_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>
    <style name="SettingText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <style name="AppThemeLight"  parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/text_dark1</item>
        <item name="android:textColorSecondary">@color/text_dark2</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="md_btn_negative_selector">@drawable/md_btn_selector</item>
        <item name="md_btn_neutral_selector">@drawable/md_btn_selector</item>
        <item name="md_btn_positive_selector">@drawable/md_btn_selector</item>
        <item name="md_btn_stacked_selector">@drawable/md_selector</item>
        <item name="md_divider">@color/md_divider_black</item>
        <item name="md_list_selector">@drawable/md_selector</item>
        <item name="themeCardBackgroundColor">@drawable/card_light_background</item>
        <item name="themeContentBackgroundColor">@drawable/layout_selector</item>
        <item name="themeContentTextColor">@color/text_dark1</item>
        <item name="themeDividerColor">@color/divider_light</item>
        <item name="themeLinkColor">@color/link_light</item>
        <item name="themeMidWhiteBackgroundColor">#ecffffff</item>
        <item name="themeTextColor1">@color/text_dark1</item>
        <item name="themeTextColor2">@color/text_dark2</item>
        <item name="themeTextColor3">@color/text_dark3</item>
        <item name="themeToolbarTextColor">@color/white</item>
        <item name="themeWhiteBackgroundColor">@color/white</item>
        <item name="themeWhiteToolbarBackgroundColor">@color/white</item>
        <item name="themeWhiteToolbarTextColor">@color/text_dark1</item>
        <item name="themeWindowBackgroundColor">@color/window_background_light</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_primary</item>
        <item name="colorControlActivated">@color/blue_primary</item>
    </style>

</resources>