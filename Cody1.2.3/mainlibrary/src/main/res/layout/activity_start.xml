<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/video_window_background"
    tools:context="com.cgfay.caincamera.activity.CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btn_camera_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="趣味美颜"/>

        <Button
            android:id="@+id/btn_camera_makeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="美妆相机"/>

        <Button
            android:id="@+id/btn_face_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="人脸信息"/>

        <Button
            android:id="@+id/btn_edit_music_merge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="@string/btn_edit_music_merge"/>

        <Button
            android:id="@+id/btn_edit_gif_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="@string/btn_edit_gif_make"
            android:visibility="gone"/>
    </LinearLayout>

</ScrollView>